<%= form_with(model: @question) do |f| %>

  <%= render "shared/errors", object: question%>

  <%= f.label :content, placeholder: "Question"%>
  <%= f.text_field :content %>

  <%= f.label :description %>
  <%= f.text_area :description, rows: 10%>

  <%= f.label :topic %>
  <%= f.select :topic, options_for_select([
    ['Python', 'Python'],
    ['C', 'C'],
    ['Flask', 'Flask'],
    ['Algorithms', 'Algorithms'],
    ['Memory', 'Memory']
  ]) %>

  <%= f.submit %>
<% end %>
