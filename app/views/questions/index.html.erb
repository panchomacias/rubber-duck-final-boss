<div class="container mx-auto p-4 flex flex-col items-center">
  <% @questions.each_with_index do |question, index| %>
    <div class="w-full max-w-2xl mb-4">
      <h2 class="text-md py-2 text-gray-600 text-center">
        <%= "#{index + 1} - "%><%= link_to(question.content, question, class: "text-blue-500 hover:underline") %>
      </h2>
      <h3 class="text-md py-2 text-gray-600 text-center">
        Topic: <%= question.topic %>
    </h3>
    <hr class="border-t border-gray-300 my-2">
    </div>
  <% end %>
  <div class="mt-4">
    <%= link_to "New question", new_question_path, class: "inline-block bg-blue-500 text-white py-2 px-4 rounded hover:bg-blue-700" %>
  </div>
</div>

